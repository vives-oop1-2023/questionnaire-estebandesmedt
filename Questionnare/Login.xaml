                Foreground="White"/>
            <Button
                Height="50px"
                Width="50px"
                Content="5" 
                Background="#FFFDFF00"
                Margin="0 5" 
                x:Name="buttonoptionfive"
                Click="Button_Click_1"
                />
            <Button
